<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.primoprogetto.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.primoprogetto.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingPage</servlet-name>
        <servlet-class>com.primoprogetto.servlet.LandingPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Invitation</servlet-name>
        <servlet-class>com.primoprogetto.servlet.InvitationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>com.primoprogetto.servlet.CreateGroupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupList</servlet-name>
        <servlet-class>com.primoprogetto.servlet.GroupListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPostServlet</servlet-name>
        <servlet-class>com.primoprogetto.servlet.AddPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupServlet</servlet-name>
        <servlet-class>com.primoprogetto.servlet.GroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingPage</servlet-name>
        <url-pattern>/LandingPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Invitation</servlet-name>
        <url-pattern>/Invitation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/CreateGroup</url-pattern>
    </servlet-mapping>
    <!--CONTEXT LISTENER-->
    <listener>
        <description>listener</description>
        <listener-class>com.primoprogetto.listeners.WebappContextListener</listener-class>
    </listener>
    <!-- URL DATABASE -->
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:derby://localhost:1527/PrimoProgetto</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>GroupList</servlet-name>
        <url-pattern>/GroupList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPostServlet</servlet-name>
        <url-pattern>/AddPostServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupServlet</servlet-name>
        <url-pattern>/GroupServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
